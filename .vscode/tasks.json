{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++: Build NetSecMaster",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/NetSecMaster.exe", 
                "-lws2_32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiles the NetSecMaster project",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
